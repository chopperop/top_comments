	<br>
	<br>
	<div class="redditAuthor">
		&#160; &#160; <%= @HNauthor %> &#160; &#160; <%= @HNpoints %> points &#160; &#160; <%= time_ago_in_words(@HNtime) if 		@time %> ago
		<br>
		<br>
	</div>
	<div class="redditBody georgia">
		&#160; &#160; &#160; &#160; <% if @HNcomment %> <%= @HNcomment %> <% else %> "No one has commented yet" <% end %>
